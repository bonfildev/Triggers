@model TriggersModels.Agenda

@{
    ViewData["Title"] = "Delete Agenda";
}

<h2>Delete Agenda</h2>

<h4>Are you sure you want to delete this agenda item?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Is Booked</dt>
        <dd class="col-sm-10">@Model.IsBooked</dd>

        <dt class="col-sm-2">Cost</dt>
        <dd class="col-sm-10">@Model.Cost.ToString("C")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
